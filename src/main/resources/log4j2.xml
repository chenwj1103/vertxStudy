<?xml version="1.0" encoding="utf-8" ?>
<Configuration>
    <Properties>
        <property name="logPath">/data/logs/wemedia</property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <RollingFile name="fhh_user" fileName="${logPath}/fhh_user.log" filePattern="${logPath}/fhh_user.%d{yyyy-MM-dd}.log"
                     append="true">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>

        <RollingFile name="fhh_user_error" fileName="${logPath}/fhh_user_error.log" filePattern="${logPath}/fhh_user_error.%d{yyyy-MM-dd}.log"
                     append="true">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <Filters>
                <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>
    </Appenders>
    <Loggers>
        <root level="info">
            <appender-ref ref="fhh_user"/>
            <appender-ref ref="fhh_user_error"/>
            <appender-ref ref="Console"/>
        </root>
    </Loggers>
</Configuration>